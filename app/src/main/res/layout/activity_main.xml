<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/operand1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"

        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
        android:paddingRight="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/operator_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operand1_tv"
        android:layout_alignParentLeft="true"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
        android:paddingLeft="10dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/operand2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/operand1_tv"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
        android:layout_alignParentRight="true"
        android:text="0"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/operand2_tv"
        android:background="@drawable/rounded_layout"
        android:layout_marginTop="50dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/row_1"
            style="@style/button_row"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/clear_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_minus_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/plus_minus_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/percentage_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/percentage_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/multiple_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_2"
            style="@style/button_row"
            android:layout_below="@+id/row_1"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/seven_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/eight_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/nine_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/division_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_3"
            style="@style/button_row"
            android:layout_below="@+id/row_2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/four_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/five_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/six_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtract_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/subtract_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_4"
            style="@style/button_row"
            android:layout_below="@+id/row_3"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/one" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/two" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/plus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_5"
            style="@style/button_row"
            android:layout_below="@+id/row_4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/del_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/zero" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/period_btn"
                style="@style/cal_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="@string/period" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal_btn"
                style="@style/cal_operand_button"
                android:layout_below="@id/operand2_tv"
                android:layout_weight="1"
                android:text="=" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>